#include<stdio.h>
main()
{
	printf("Pick an item and type the S.no : \n1. Pizza, Rs 249\n2. Burger, Rs 179\n3. Pasta, Rs 199\n4. French Fries, Rs 89\n5. Sandwich, Rs 149\n");
	int choice=0;
	scanf("%d",&choice);
	switch(choice)
	{
		case 1:
			printf("\nYour order is Pizza.\nBill Amount:  Rs249");
			break;
		case 2:
			printf("\nYour order is Burger.\nBill Amount:   Rs179");
			break;
		case 3:
			printf("\nYour order is Pasta.\nBill Amount:    Rs199");
			break;
		case 4:
			printf("\nYour order is French Fries.\nBill Amount:          Rs89");
			break;
		case 5:
			printf("\nYour order is Sandwich.\nBill Amount:   Rs149");
			break;
		default:printf("\n\nInvalid Number.");
	}
	printf("\n\n\nThankyou for your order.");
	printf("\n\nEnter any key to exit :");
	int kit[1];
}
